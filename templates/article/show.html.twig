{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('article') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('article') }}
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">{{ article.title }}</h1>
        <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>

    <div class="mb-3 text-muted">
        <i class="bi bi-heart-fill text-danger"></i> {{ article.likes|length }} j'aime
        &nbsp;|&nbsp;
        <i class="bi bi-calendar3"></i> Publié le {{ article.createdAt|date('d/m/Y H:i') }}
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="article-content">
                {{ article.content|nl2br }}
            </div>
        </div>
    </div>

    {% if article.categories|length > 0 %}
        <div class="mb-4">
            <h4>Catégories</h4>
            <ul class="list-inline">
                {% for category in article.categories %}
                    <li class="list-inline-item">
                        <span class="badge bg-secondary">{{ category.title }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <hr>

    <h3>Commentaires ({{ article.comments|length }})</h3>

    {% if article.comments|length > 0 %}
        <div class="list-group mb-4">
            {% for comment in article.comments|sort((a, b) => b.createdAt <=> a.createdAt) %}
                {% include 'comment/_comment.html.twig' with {'comment': comment} %}
            {% endfor %}
        </div>
    {% else %}
        <p>Aucun commentaire pour le moment. Soyez le premier à réagir !</p>
    {% endif %}

    <hr>

    <h4>Ajouter un commentaire</h4>

    {{ form_start(commentForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

    <div class="mb-3">
        {{ form_label(commentForm.author, 'Votre nom') }}
        {{ form_widget(commentForm.author, {'attr': {'class': 'form-control', 'required': true}}) }}
        <div class="invalid-feedback">Veuillez saisir votre nom.</div>
    </div>

    <div class="mb-3">
        {{ form_label(commentForm.content, 'Votre commentaire') }}
        {{ form_widget(commentForm.content, {'attr': {'class': 'form-control', 'rows': 4, 'required': true}}) }}
        <div class="invalid-feedback">Veuillez saisir un commentaire.</div>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-chat-dots"></i> Publier
    </button>

    {{ form_end(commentForm) }}
</div>
{% endblock %}
