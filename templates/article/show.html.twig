{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('article') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('article') }}
{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">{{ article.title }}</h1>
        <a href="{{ path('app_article_index') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Retour √† la liste
        </a>
    </div>

    <div class="mb-3 text-muted">
        <i class="bi bi-heart-fill text-danger"></i><span id="likes-count">{{ article.likes|length }}</span> j'aime
        &nbsp;|&nbsp;
        <i class="bi bi-calendar3"></i> Publi√© le {{ article.createdAt|date('d/m/Y H:i') }}

        <button type="button" class="btn btn-sm btn-outline-danger like-button" data-article-id="{{ article.id }}">
            <span class="like-label">{% if is_liked %}üíî Je n‚Äôaime plus{% else %}‚ù§Ô∏è J‚Äôaime{% endif %}</span>
        </button>
    </div>

    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <div class="article-content">
                {{ article.content|nl2br }}
            </div>
        </div>
    </div>

    {% if article.categories|length > 0 %}
        <div class="mb-4">
            <h4>Cat√©gories</h4>
            <ul class="list-inline">
                {% for category in article.categories %}
                    <li class="list-inline-item">
                        <span class="badge bg-secondary">{{ category.title }}</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <hr>

    <h3>Commentaires (<span id="comments-count">{{ article.comments|length }}</span>)</h3>

    <div id="comments-list" class="list-group mb-4">
        {% if article.comments|length > 0 %}
            {% for comment in article.comments|sort((a, b) => b.createdAt <=> a.createdAt) %}
                {% include 'comment/_comment.html.twig' with {'comment': comment} %}
            {% endfor %}
        {% endif %}
    </div>

    {% if article.comments|length == 0 %}
        <p id="no-comments-msg">Aucun commentaire pour le moment. Soyez le premier √† r√©agir !</p>
    {% endif %}

    <hr>

    <h4>Ajouter un commentaire</h4>

    {% if app.user %}
        {{ form_start(commentForm, {
            attr: {
                class: 'needs-validation',
                novalidate: 'novalidate',
                id: 'comment-form',
                action: path('api_article_comment', { id: article.id })
            }
        }) }}

        <div class="mb-3">
            {{ form_label(commentForm.content) }}
            {{ form_widget(commentForm.content, {'attr': {'class': 'form-control', 'rows': 4, 'required': true}}) }}
            <div class="invalid-feedback">Veuillez saisir un commentaire.</div>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-chat-dots"></i> Publier
        </button>

        {{ form_end(commentForm) }}
    {% else %}
        <div class="alert alert-info">
            Vous devez √™tre connect√© pour poster un commentaire. 
            <a href="{{ path('app_login') }}">Se connecter</a>.
        </div>
    {% endif %}
</div>
{% endblock %}
