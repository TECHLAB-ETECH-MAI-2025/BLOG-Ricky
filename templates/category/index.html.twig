{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des cat√©gories</h1>

        <table class="table table-striped table-bordered mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>CreatedAt</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.title }}</td>
                    <td>{{ category.description }}</td>
                    <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_category_new') }}" class="btn btn-outline-primary mt-2">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>
{% endblock %}
