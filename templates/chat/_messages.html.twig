<div class="mb-3">
    {% for message in messages %}
        <div class="d-flex mb-1 {% if app.user.id == message.sender.id %}justify-content-end{% else %}justify-content-start{% endif %}">
            <div class="small text-muted me-2" style="min-width: 40px; text-align: center;">
                {{ message.createdAt|date('H:i') }}
            </div>
            <div class="p-2 rounded-3 {% if app.user.id == message.sender.id %}bg-primary text-white{% else %}bg-secondary bg-opacity-25 text-dark{% endif %}" style="max-width: 75%;">
                {{ message.content }}
            </div>
        </div>
    {% else %}
        <p class="text-muted">Aucun message pour lâ€™instant.</p>
    {% endfor %}
</div>
